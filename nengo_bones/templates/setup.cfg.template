# Automatically generated by nengo-bones, do not edit this file directly

{% block build_sphinx %}
[build_sphinx]
source-dir = docs
build-dir = docs/_build
all_files = 1
{% endblock %}

{% block coverage_run %}
[coverage:run]
source = ./
relative_files = True
{% endblock %}

{% block coverage_report %}
[coverage:report]
# Regexes for lines to exclude from consideration
exclude_lines =
    # Have to re-enable the standard pragma
    # place ``# pragma: no cover`` at the end of a line to ignore it
    pragma: no cover

    # Don't complain if tests don't hit defensive assertion code:
    raise NotImplementedError

    # `pass` is just a placeholder, fine if it's not covered
    ^[ \t]*pass$

    {% for exclude in coverage.exclude_lines %}
    {{ exclude }}
    {% endfor %}

# Patterns for files to exclude from reporting
omit =
    */tests/test*
    {% for omit in coverage.omit_files %}
    {{ omit }}
    {% endfor %}
{% endblock %}

{% block flake8 %}
[flake8]
exclude =
    __init__.py
    {% for exclude in flake8.exclude %}
    {{ exclude }}
    {% endfor %}
ignore =
    E123
    E133
    E203
    E226
    E241
    E242
    E501
    E731
    F401
    W503
    {% for ignore in flake8.ignore %}
    {{ ignore }}
    {% endfor %}
max-complexity = 10
max-line-length = 88
{% endblock %}

{% block pytest %}
[tool:pytest]
{% if pytest.addopts %}
addopts = {%- for opt in pytest.addopts %} {{ opt }} {%- endfor %}

{% endif %}
norecursedirs =
    .*
    *.egg
    build
    dist
    docs
    {% for dir in pytest.norecursedirs %}
    {{ dir }}
    {% endfor %}
{% if pytest.markers %}
markers =
    {% for marker, desc in pytest.markers.items() %}
    {{ marker }}: {{ desc }}
    {% endfor %}
{% endif %}
{% for param, (type, vals) in pytest.extras.items() %}
{% if type == "str" %}
{{ param }} = {{ vals }}
{% elif type == "list" %}
{{ param }} =
    {% for val in vals %}
    {{ val }}
    {% endfor %}
{% elif type == "dict" %}
{{ param }} =
    {% for var, val in vals.items() %}
    {{ var }}
        "{{ val | wordwrap(break_long_words=False, wrapstring="\n        ") }}"
    {% endfor %}
{% endif %}
{% endfor %}
{% endblock %}

{% block pylint %}
[pylint]
{% if pylint.ignore %}
ignore =
    {% for ignore in pylint.ignore %}
    {{ ignore }},
    {% endfor %}
{% endif %}

[pylint.messages]
disable =
    arguments-differ,
    assignment-from-no-return,
    attribute-defined-outside-init,
    blacklisted-name,
    comparison-with-callable,
    duplicate-code,
    fixme,
    import-error,
    invalid-name,
    invalid-sequence-index,
    len-as-condition,
    literal-comparison,
    no-else-raise,
    no-else-return,
    no-member,
    no-name-in-module,
    not-an-iterable,
    not-context-manager,
    protected-access,
    redefined-builtin,
    stop-iteration-return,
    too-few-public-methods,
    too-many-arguments,
    too-many-branches,
    too-many-instance-attributes,
    too-many-lines,
    too-many-locals,
    too-many-return-statements,
    too-many-statements,
    unexpected-keyword-arg,
    unidiomatic-typecheck,
    unsubscriptable-object,
    unsupported-assignment-operation,
    unused-argument,
    {% for disable in pylint.disable %}
    {{ disable }},
    {% endfor %}

[pylint.imports]
known-third-party =
    matplotlib,
    nengo,
    numpy,
    pytest,
    {% for third_party in pylint.known_third_party %}
    {{ third_party }},
    {% endfor %}

[pylint.format]
max-line-length = 88

[pylint.classes]
valid-metaclass-classmethod-first-arg = metacls

[pylint.reports]
reports = no
score = no
{% endblock %}

{% block codespell %}
[codespell]
skip = ./build,*/_build,*-checkpoint.ipynb,./.eggs,./*.egg-info,./.git,*/_vendor,./.mypy_cache,{{ codespell.skip | join(",") }}
{% if codespell.ignore_words %}
ignore-words-list = {{ codespell.ignore_words | join(",") }}
{% endif %}
{% endblock %}
{%- if py_typed is defined %}

{% block mypy %}
[mypy]
python_version = {{ min_python }}
disallow_untyped_calls = True
disallow_untyped_defs = True
plugins = numpy.typing.mypy_plugin

{% for ignore in mypy.ignore_missing_imports %}
[mypy-{{ ignore }}.*]
ignore_missing_imports = True
{% endfor %}
{% endblock %}
{% endif %}
