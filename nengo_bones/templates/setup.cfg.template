{% block build_sphinx %}
[build_sphinx]
source-dir = docs
build-dir = docs/_build
all_files = 1
{% endblock %}

{% block coverage_run %}
[coverage:run]
source = {{ pkg_name }}
{% endblock %}

{% block coverage_report %}
[coverage:report]
# Regexes for lines to exclude from consideration
exclude_lines =
    # Have to re-enable the standard pragma
    # place ``# pragma: no cover`` at the end of a line to ignore it
    pragma: no cover

    # Don't complain if tests don't hit defensive assertion code:
    raise NotImplementedError

    # `pass` is just a placeholder, fine if it's not covered
    ^[ \t]*pass$

    {% for exclude in coverage.exclude_lines %}
    {{ exclude }}
    {% endfor %}

# Patterns for files to exclude from reporting
omit =
    */tests/test*
    {% for omit in coverage.omit_files %}
    {{ omit }}
    {% endfor %}
{% endblock %}

{% block flake8 %}
[flake8]
exclude =
    __init__.py
    {% for exclude in flake8.exclude %}
    {{ exclude }}
    {% endfor %}
ignore =
    E123
    E133
    E203
    E226
    E241
    E242
    E501
    E731
    F401
    W503
    {% for ignore in flake8.ignore %}
    {{ ignore }}
    {% endfor %}
max-complexity = 10
max-line-length = 88
{% endblock %}

{% block pytest %}
[tool:pytest]
{% if pytest.addopts %}
addopts = {%- for opt in pytest.addopts %} {{ opt }} {%- endfor %}

{% endif %}
norecursedirs =
    .*
    *.egg
    build
    dist
    docs
    {% for dir in pytest.norecursedirs %}
    {{ dir }}
    {% endfor %}
{% if pytest.markers %}
markers =
    {% for marker, desc in pytest.markers.items() %}
    {{ marker }}: {{ desc }}
    {% endfor %}
{% endif %}
{% for param, (type, vals) in pytest.extras.items() %}
{% if type == "str" %}
{{ param }} = {{ vals }}
{% elif type == "list" %}
{{ param }} =
    {% for val in vals %}
    {{ val }}
    {% endfor %}
{% elif type == "dict" %}
{{ param }} =
    {% for var, val in vals.items() %}
    {{ var }}
        "{{ val | wordwrap(break_long_words=False, wrapstring="\n        ") }}"
    {% endfor %}
{% endif %}
{% endfor %}
{% endblock %}

